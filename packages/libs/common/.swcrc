{
  "$schema": "https://json.schemastore.org/swcrc",
  "minify": false,
  "sourceMaps":true,
  // ðŸ¤¬ inlineSourcesContent: false - needed for webpack in react-scritps to works fine with new exports in runtime
  "inlineSourcesContent": false,
  "isModule": true,
  "exclude": [".*\\.d\\.ts$"],
  "jsc": {
    "target": "es2016",
    "parser": {
        "syntax": "typescript",
        "tsx": true,
        "decorators": true
    },
    "preserveAllComments": false,
    "transform": {
      "react": {
        "runtime": "automatic"
      }
    }
  }
}